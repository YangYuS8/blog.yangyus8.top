# ===================== Waline & MariaDB Secrets =====================
# 复制为 .env 后修改真实值，不要提交 .env

# MariaDB
MYSQL_ROOT_PASSWORD=replace_root_password
MYSQL_DATABASE=waline
MYSQL_USER=waline
MYSQL_PASSWORD=replace_user_password
# MariaDB 数据目录 (容器内 /var/lib/mysql)
WALINE_DB_DIR=./data/waline-db

# Waline 管理账号（首次登录后台）
ADMIN_USER=admin
ADMIN_PASSWORD=replace_admin_password
# Waline 数据目录 (容器内 /data)
WALINE_DATA_DIR=./data/waline

# 站点公开访问地址（用于注入前端 & 邮件等绝对链接，如果需要）
SITE_URL=https://blog.example.com
# Public URL for Waline when front-end needs it (optional override)
WALINE_PUBLIC_URL=https://blog.example.com/comment/

# 镜像名称（用于 docker-compose 拉取）
BLOG_IMAGE=ghcr.io/OWNER/hexo-blog:latest

# 可选邮件通知配置（示例）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=465
# SMTP_USER=mailer@example.com
# SMTP_PASS=replace_smtp_password
# SMTP_SECURE=true

# 时区
TZ=Asia/Shanghai

# ===================== MinIO (可选) =====================
# MinIO 控制台建议由上层反代并加 BasicAuth/限制访问来源
MINIO_ROOT_USER=replace_minio_user
MINIO_ROOT_PASSWORD=replace_minio_password
MINIO_BUCKET=blog
# 供前端引用的公开前缀（建议配置到反向代理域名，如 https://cdn.example.com）
MINIO_PUBLIC_PREFIX=https://cdn.example.com
# MinIO 数据目录 (容器内 /data)
MINIO_DATA_DIR=./data/minio
