SITE_URL=https://blog.yangyus8.top

# 镜像名称（用于 docker-compose 拉取）
BLOG_IMAGE=ghcr.io/OWNER/yangyus8-blog:latest

# 可选邮件通知配置（示例）
# SMTP_HOST=smtp.yangyus8.top
# SMTP_PORT=465
# SMTP_USER=mailer@yangyus8.top
# SMTP_PASS=replace_smtp_password
# SMTP_SECURE=true

# 时区
TZ=Asia/Shanghai

# ===================== MinIO (可选) =====================
# MinIO 控制台建议由上层反代并加 BasicAuth/限制访问来源
MINIO_ROOT_USER=replace_minio_user
MINIO_ROOT_PASSWORD=replace_minio_password
MINIO_BUCKET=blog
# 供前端引用的公开前缀（建议配置到反向代理域名，如 https://cdn.yangyus8.top）
MINIO_PUBLIC_PREFIX=https://cdn.yangyus8.top
# MinIO 数据目录 (容器内 /data)
MINIO_DATA_DIR=./data/minio

# ===================== Twikoo (Self-host) =====================
# Twikoo 公网访问前缀（需与 _config.fluid.yml 中 twikoo.envId 保持一致）
TWIKOO_PUBLIC_URL=https://blog.yangyus8.top/twikoo/
TWIKOO_MONGO_URL=mongodb://twikoo-db:27017/twikoo?replicaSet=rs0
# 允许的跨域来源（多个用逗号）
TWIKOO_CORS_ALLOW_ORIGIN=https://blog.yangyus8.top
# Twikoo 数据目录（若后续启用本地文件特性，可自定义挂载；当前镜像主要使用 Mongo 存储）
TWIKOO_DB_DIR=./data/twikoo-db
